<?xml version="1.0" encoding="utf-8"?>
<com.zuobiao.smarthome.smarthome3.ui.BottomControlPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_control_panel_height"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
     >

    <com.zuobiao.smarthome.smarthome3.ui.ImageText
        android:id="@+id/btn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/imagetext_marginTop"
        android:layout_alignParentLeft="true" />

    <com.zuobiao.smarthome.smarthome3.ui.ImageText
        android:id="@+id/btn_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/imagetext_marginTop"
        android:layout_toRightOf="@id/btn_message" />

    <com.zuobiao.smarthome.smarthome3.ui.ImageText
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/imagetext_marginTop"
        android:layout_alignParentRight="true" />

</com.zuobiao.smarthome.smarthome3.ui.BottomControlPanel>