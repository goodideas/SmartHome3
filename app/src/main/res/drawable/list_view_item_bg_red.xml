<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="#FFFFFF" android:width="1dp"/>
            <gradient android:startColor="#b10b11"
                android:endColor="#b4111c"
                android:centerColor="#ed1d24"
                android:angle="270"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <stroke android:color="#FFFFFF" android:width="1dp"/>
            <gradient android:startColor="#e60f13"
                android:endColor="#d42427"
                android:centerColor="#ed1d20"
                android:angle="270"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>