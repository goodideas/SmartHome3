<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.zuobiao.smarthome.smarthome3.activity.AddRfidCardInfoActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/title_layout"
        android:id="@+id/include2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:id="@+id/btnBack"
        android:textColor="#FFFFFF"
        android:background="#00000000"
        android:layout_marginBottom="3dp"
        android:layout_alignBottom="@+id/include2"
        android:layout_alignLeft="@+id/include2"
        android:layout_alignStart="@+id/include2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加信息"
        android:layout_marginBottom="3dp"
        android:textColor="#FFFFFF"
        android:background="#00000000"
        android:id="@+id/btnAddRfidInfo"
        android:layout_above="@+id/rfidListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rfidListView"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
