<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.zuobiao.smarthome.smarthome3.activity.SwitchsActivity">

    <include
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/equipment_title_bar"
        />

    <LinearLayout
        android:layout_below="@id/include"
        android:id="@+id/switchLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etEquipmentName"
            android:layout_weight="1"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btnModifyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改设备名称"
            />
    </LinearLayout>


    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/switchs_bg"
        android:textOn=""
        android:textOff=""
        android:layout_below="@id/switchLinearLayout"
        />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/switchs_bg"
        android:layout_below="@id/toggleButton1"
        android:textOn=""
        android:textOff=""
        />


    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/switchs_bg"
        android:layout_below="@id/toggleButton2"
        android:textOn=""
        android:textOff=""
        />



</RelativeLayout>
